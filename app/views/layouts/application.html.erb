        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

    <!-- Navigation -->
    <div class="container">
    <nav class="navbar navbar-default navbar-custom navbar-fixed-top">
        <div class="container-fluid">


            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-left">
                    <li>
                        <%= link_to "Home", root_path%>
                    </li>
                    <li>
                        <%= link_to "About", about_path%>
                    </li>
                    <li>
                        <%= link_to "Wikis", wikis_path%>
                    </li>
                    <li>
                    </li>
                </ul>
         
            <!-- Collect the nav links, forms, and other content for toggling -->
          
        <div class="pull-right user-info">
                  <% if current_user %>
                  
                       Hello <%=(current_user.name || current_user.email)%>!
                        <button type="button" class="btn-sm btn-info"> 
                       <%= link_to edit_user_registration_path, class: 'btn-info btn-sm' do %>
              <span class="glyphicon glyphicon-user"></span>
            <% end %></button>
                    
                   <button type="button" class="btn-sm btn-info">   <%= link_to "",destroy_user_session_path, method: :delete, class: 'glyphicon glyphicon-log-out'%>
                    </button> 
           
                  <% else %>
                        <%= link_to "Sign In", new_user_session_path %> or
                       <%= link_to "Sign Up", new_user_registration_path %>
                  <%end%>
                </div>
              </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
        
    </nav>
  </div>
</head>
<body>

<%= yield %>

</body>
</html>
