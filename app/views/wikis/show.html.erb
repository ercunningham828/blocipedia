 <!-- Page Content -->
    <div class="container">
 </br>
</br>
</br>
<a class="pull-left"><i class="glyphicon glyphicon-arrow-left"></i><%= link_to " Back to All Wikis",wikis_path %></a>
        <div class="row">

            <!-- Blog Post Content Column -->
            <div class="col-lg-8">

                <!-- Blog Post -->

                <!-- Title -->
                <h1><%=markdown_to_html @wiki.title%></h1>

                <!-- Author -->
                <p class="lead">
                    Collaborators: 
                    <%@collaborations.each do |collaboration|%>
                    <span class="badge"><%=collaboration.user_name%> </span>
                          
                    <%end%>
                </p>
                
                <hr>

                <!-- Date/Time -->
                <p><span class="glyphicon glyphicon-time"></span> Created <%=@wiki.created_at.strftime("%m/%d/%Y %I:%M %p")%></p>

                <hr>


                <!-- Post Content -->
                <p class="lead"><%=markdown_to_html @wiki.body%></p>

                <hr>
<!-- End Nested Comment -->
                    </div>
                    <div class="col-md-4">
                
                      <% if @wiki.users.include?(current_user) %>

                      <h4>Add Collaborators</h4>
                      <%= form_for @collaboration do |f|%>
                          <div>
                              <%= f.label :user %>
                              <%= f.collection_select(:user_id, @users, :id, :name)%>
                              </div>
                              <%= f.hidden_field( :wiki_id, :value=>@wiki.id)%>
                         
                          <%= f.submit "Add Collaborator", class:"btn-sm btn-info" %>
                      <% end %>
                 
                    </br>
                       <h4>Remove Collaborators</h4>
                      <%=form_tag collaboration_path, method: :delete do%>
                          <div>
                              <%= collection_select(:collaboration,:user_id, @collaborations, :user_id, :user_name)%>
                              </div>
                          <%= submit_tag "Remove Collaborator", class:"btn-sm btn-info" %>
                    
                   <% end %>
                     <% end %>
                    </br>
                  
                        <% if policy(@wiki).update? %>
                          <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
                          <%end%>
                          <% if policy(@wiki).destroy? %>
                           <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %>
                           <%end%>
                      </div>
                </div>
            </div>

 
